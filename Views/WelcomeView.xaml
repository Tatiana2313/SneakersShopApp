<UserControl x:Class="SneakersShopApp.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SneakersShopApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Welcome Header -->
        <TextBlock Grid.Row="0" 
                   Text="Добро пожаловать в Sneakers Shop!" 
                   FontSize="36" 
                   FontWeight="Bold" 
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,30"/>

        <!-- Main Content with Image -->
        <Border Grid.Row="1" 
                Background="White"
                CornerRadius="16" 
                Margin="20,0,20,20"
                Effect="{DynamicResource MaterialDropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Margin="30"
                        CornerRadius="12"
                        Background="#FFF0ED">
                        <Image Source="/Resources/welcome.jpg" 
                               Stretch="Uniform"
                               Margin="20">
                               <Image.OpacityMask>
                                   <VisualBrush>
                                       <VisualBrush.Visual>
                                           <Border Background="Black" 
                                                   CornerRadius="12"
                                                   Width="{Binding RelativeSource={RelativeSource AncestorType=Image}, Path=ActualWidth}"
                                                   Height="{Binding RelativeSource={RelativeSource AncestorType=Image}, Path=ActualHeight}"/>
                                       </VisualBrush.Visual>
                                   </VisualBrush>
                               </Image.OpacityMask>
                        </Image>
                </Border>
            </Grid>
        </Border>
    </Grid>

    <UserControl.Resources>
        <DropShadowEffect x:Key="MaterialDropShadow" 
                          ShadowDepth="2" 
                          Direction="270" 
                          BlurRadius="10" 
                          Opacity="0.2" 
                          Color="#000000"/>
    </UserControl.Resources>
</UserControl>
